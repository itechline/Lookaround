<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef">


    <RelativeLayout
        android:id="@+id/relativeLayout_withcontent_page2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:background="#ffffff"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/adding_estateinfo_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="visible"
            android:layout_margin="5sp">

            <TextView
                android:layout_width="15sp"
                android:layout_height="20sp"
                android:text="2"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textColor="#ffffff"
                android:background="@drawable/gps_1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/gps_indicator_2"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/estate_info"
                android:id="@+id/adding_estateinfo_text"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/gps_indicator_2"
                android:layout_toEndOf="@+id/gps_indicator_2"
                android:layout_margin="5sp"
                android:textSize="15sp"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_above="@+id/addestate_view_textview"
            android:id="@+id/linearLayout_forbuttons">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/button_back"
                android:onClick="prewAddestatePage"
                android:id="@+id/back_button_page2"
                android:layout_margin="10sp"
                android:textColor="#0066cc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/button_next"
                android:onClick="nextAddestatePage"
                android:id="@+id/button_go_page2"
                android:layout_margin="10sp"
                android:background="@drawable/colorbutton"
                android:textColor="#ffffff"
                android:padding="3sp" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/content_add_estate_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/adding_estateinfo_relativelayout"
            android:gravity="center_vertical"
            android:layout_above="@+id/linearLayout_forbuttons">

            <RelativeLayout
                android:id="@+id/addestate_parking_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_balcony_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_balcony_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_balcony_spinner_rlayout"
                android:layout_above="@+id/addestate_heatingtype_textview">
                <Spinner
                    android:id="@+id/addestate_parking_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:transitionGroup="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_type_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_floors_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_floors_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_floors_spinner_rlayout"
                android:layout_above="@+id/addestate_balcony_textview">
                <Spinner
                    android:id="@+id/addestate_type_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/adestate_view_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="false"
                android:layout_alignLeft="@+id/addestate_ecertificate_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_ecertificate_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_ecertificate_spinner_rlayout">
                <Spinner
                    android:id="@+id/adestate_view_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:transitionGroup="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_elevator_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_heatingtype_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_heatingtype_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_heatingtype_spinner_rlayout"
                android:layout_above="@+id/addestate_e_certification_textview">
                <Spinner
                    android:id="@+id/addestate_elevator_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:transitionGroup="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/addestate_view_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/addestate_e_certification_textview"
                android:layout_margin="7sp" />

            <RelativeLayout
                android:id="@+id/addestate_rooms_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/addestate_type_textview"
                android:layout_toEndOf="@+id/addestate_type_textview"
                android:background="@drawable/spinner_border"
                android:layout_alignParentTop="true"
                android:layout_above="@+id/addestate_condition_textview">
                <Spinner
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/addestate_rooms_spinner"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:lineSpacingExtra="5sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_heatingtype_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/spinner_border"
                android:layout_alignLeft="@+id/addestate_parking_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_parking_spinner_rlayout"
                android:layout_below="@+id/addestate_parking_spinner_rlayout"
                android:layout_above="@+id/addestate_elevator_textview">
                <Spinner
                    android:id="@+id/addestate_heatingtype_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:transitionGroup="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_ecertificate_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_elevator_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_elevator_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_elevator_spinner_rlayout"
                android:layout_above="@+id/addestate_view_textview">
                <Spinner
                    android:id="@+id/addestate_ecertificate_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:transitionGroup="false"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_condition_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_rooms_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_rooms_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_rooms_spinner_rlayout"
                android:layout_above="@+id/addestate_floors_textview">
                <Spinner
                    android:id="@+id/addestate_condition_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:lineSpacingExtra="5sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_balcony_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_type_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_type_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_above="@+id/addestate_parking_textview"
                android:layout_below="@+id/addestate_type_spinner_rlayout">
                <Spinner
                    android:id="@+id/addestate_balcony_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:layout_centerInParent="true"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:padding="3sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addestate_floors_spinner_rlayout"
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/addestate_condition_spinner_rlayout"
                android:layout_alignStart="@+id/addestate_condition_spinner_rlayout"
                android:background="@drawable/spinner_border"
                android:layout_below="@+id/addestate_condition_spinner_rlayout"
                android:layout_above="@+id/addestate_type_textview">
                <Spinner
                    android:id="@+id/addestate_floors_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentEnd="false"
                    android:gravity="left"
                    android:spinnerMode="dialog"
                    android:textAlignment="center"
                    android:lineSpacingExtra="5sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5sp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:padding="3sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/addestate_e_certification_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_ecertification"
                android:layout_below="@+id/addestate_elevator_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_elevator_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_elevator"
                android:layout_below="@+id/addestate_heatingtype_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_heatingtype_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_heating"
                android:layout_below="@+id/addestate_parking_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_parking_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_parking"
                android:layout_below="@+id/addestate_balcony_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_balcony_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_balcony"
                android:layout_below="@+id/addestate_type_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_type_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_type"
                android:layout_below="@+id/addestate_floors_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_floors_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_floors"
                android:layout_below="@+id/addestate_condition_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_condition_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_condition"
                android:layout_below="@+id/addestate_rooms_textview"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="7sp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/addestate_rooms_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/add_advert_rooms_count"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:layout_below="@+id/adding_estateinfo_relativelayout"
                android:layout_margin="7sp"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
