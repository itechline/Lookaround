<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budapest II. kerületi ingatlan tetőre néző budival"
            android:id="@+id/admonitor_liset_item_textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_toLeftOf="@+id/admonitor_list_item_edit_image"
            android:layout_toStartOf="@+id/admonitor_list_item_edit_image"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:textSize="14sp"/>

        <ImageView
            android:src="@drawable/admonitor_pirosiksz"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:id="@+id/admonitor_list_item_delete_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10sp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

        <ImageView
            android:src="@drawable/admonitor_ceruza"
            android:layout_width="wrap_content"
            android:layout_height="18sp"
            android:visibility="gone"
            android:id="@+id/admonitor_list_item_edit_image"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/admonitor_list_item_delete_image"
            android:layout_toStartOf="@+id/admonitor_list_item_delete_image"
            android:layout_margin="10sp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </RelativeLayout>
</LinearLayout>