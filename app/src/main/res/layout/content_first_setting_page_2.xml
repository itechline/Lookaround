<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_setting_page_2_relativelayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_settings_page2"
            android:id="@+id/first_setting_pg2_text"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="20sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35sp"
            android:id="@+id/first_setting_phone_edittext"
            android:layout_below="@+id/first_setting_pg2_text"
            android:layout_margin="20sp"
            android:background="@drawable/spinner_border"
            android:hint="@string/first_setting_p2_hint"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="italic"
            android:inputType="phone" />

        <LinearLayout
            android:id="@+id/layout_forbuttons_first_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_below="@+id/first_setting_phone_edittext"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_back"
                android:onClick="prewPageFirstSetting"
                android:id="@+id/first_setting_back_button"
                android:textColor="#0066cc"
                android:layout_margin="5sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="@string/button_next"
                android:id="@+id/first_setting_next_button"
                android:background="@drawable/colorbutton"
                android:textColor="#ffffff"
                android:onClick="nextPageFirstSetting"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2sp"
                android:layout_margin="5sp"
            />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>