<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#ededed">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_setting_page_2_relativelayout"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/placeholder_layout"
        android:layout_below="@+id/placeholder_layout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_settings_page1"
            android:id="@+id/first_setting_pg2_text"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="20sp" />

        <RelativeLayout
            android:id="@+id/first_setting_city_edittext_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@+id/first_setting_pg2_text"
            android:background="@drawable/spinner_border"
            android:layout_margin="20sp"
            android:padding="2sp">
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/first_setting_city_edittext"
            android:hint="@string/first_setting_p1_hint"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="italic"
            android:singleLine="true"
            android:capitalize="sentences"
            android:background="#ffffff"
            android:layout_height="45sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="130sp"
            android:text="@string/button_next"
            android:id="@+id/first_setting_next_button"
            android:layout_below="@+id/first_setting_city_edittext_layout"
            android:layout_centerHorizontal="true"
            android:onClick="nextPageFirstSetting"
            android:textColor="#ffffff"
            android:background="@drawable/gomb_kicsi"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3sp"
            android:layout_margin="20sp"
            android:layout_height="40sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/placeholder_layout"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/placeholder_layout2"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp"
        android:layout_height="130sp"></RelativeLayout>
</RelativeLayout>