<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_setting_page_2_relativelayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_settings_page3"
            android:id="@+id/first_setting_pg2_text"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="20sp" />

        <LinearLayout
            android:id="@+id/first_setting_profile_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_setting_pg2_text"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="15sp">


            <ImageView
                android:src="@drawable/fenykepezo"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:id="@+id/profile_photo_cam"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_margin="10sp"/>

            <ImageView
                android:src="@drawable/feltoltes"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:id="@+id/profile_photo_gallery"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_margin="10sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_next"
            android:id="@+id/first_setting_next_button"
            android:background="@drawable/colorbutton"
            android:onClick="nextPageFirstSetting"
            android:textColor="#ffffff"
            android:layout_below="@+id/first_setting_profile_pic_layout"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:padding="2sp" />
    </RelativeLayout>
</RelativeLayout>