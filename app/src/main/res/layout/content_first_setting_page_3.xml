<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_setting_page_2_relativelayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first_settings_page3"
            android:id="@+id/first_setting_pg2_text"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_margin="20sp" />

        <LinearLayout
            android:id="@+id/first_setting_profile_pic_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_setting_pg2_text"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="15sp">


            <ImageView
                android:src="@drawable/fenykepezo"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:onClick="TakeImageFS"
                android:id="@+id/profile_photo_cam"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_margin="10sp"/>

            <ImageView
                android:src="@drawable/feltoltes"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:onClick="pickImageFS"
                android:id="@+id/profile_photo_gallery"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_margin="10sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/first_setting_profile_pic_layout"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_back"
                android:id="@+id/textView5"
                android:onClick="prewPageFirstSetting"
                android:textColor="#0066cc"
                android:layout_margin="5sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:text="@string/button_next"
                android:id="@+id/textView6"
                android:background="@drawable/colorbutton"
                android:textColor="#ffffff"
                android:onClick="nextPageFirstSetting"
                android:gravity="center_vertical|center_horizontal"
                android:padding="2sp"
                android:layout_margin="5sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>