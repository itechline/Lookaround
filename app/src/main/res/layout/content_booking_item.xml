<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_border1"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16"
            android:id="@+id/booking_hours_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="2sp"
            android:textColor="#0066cc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:id="@+id/booking_minutes_text"
            android:layout_toRightOf="@+id/booking_hours_text"
            android:layout_toEndOf="@+id/booking_hours_text"
            android:textSize="20sp"
            android:layout_alignTop="@+id/booking_hours_text"
            android:textColor="#0066cc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/booking_text"
            android:id="@+id/booking_button_login"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="5sp"
            android:textColor="#0066cc"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Szabad IdÅ‘pont"
            android:id="@+id/booking_date_type"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/booking_minutes_text"
            android:layout_toEndOf="@+id/booking_minutes_text"
            android:textSize="18sp"
            android:layout_marginLeft="15sp" />
    </RelativeLayout>


</RelativeLayout>