<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/booking_date_rlayout"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/b_d_border">

        <TextView
            android:id="@+id/booking_date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="false"
            android:gravity="center_horizontal"
            android:textSize="22sp"/>

        <ImageView
            android:src="@drawable/kekpotty"
            android:id="@+id/booking_date_status_image"
            android:layout_width="10sp"
            android:layout_height="10sp"
            android:layout_below="@+id/booking_date_textView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>