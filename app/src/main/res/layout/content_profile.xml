<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/content_profile_top_hint_text"
        android:id="@+id/profile_top_textview"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:id="@+id/profile_buttons_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:layout_margin="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/button_back"
            android:id="@+id/profile_back_button"
            android:textColor="#0066cc"
            android:textSize="16sp"
            android:layout_margin="5sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/button_save"
            android:id="@+id/profile_save_button"
            android:background="@drawable/colorbutton"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_margin="5sp"
            android:padding="2sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/surename"
        android:id="@+id/profile_surename_textView"
        android:layout_below="@+id/profile_top_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="5sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/profile_surename_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/profile_surename_textView"
        android:layout_below="@+id/profile_top_textview"
        android:background="@drawable/spinner_border"
        android:layout_marginRight="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/firstname_profile"
        android:id="@+id/profile_firstname_textView"
        android:layout_below="@+id/profile_surename_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="5sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/profile_firstname_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/profile_firstname_textView"
        android:layout_below="@+id/profile_surename_textView"
        android:background="@drawable/spinner_border"
        android:layout_marginRight="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/phone_number"
        android:id="@+id/profile_phone_textView"
        android:layout_below="@+id/profile_firstname_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/profile_phone_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/profile_phone_textView"
        android:layout_below="@+id/profile_firstname_textView"
        android:background="@drawable/spinner_border"
        android:layout_marginRight="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/email"
        android:id="@+id/profile_mail_textView"
        android:layout_below="@+id/profile_phone_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/profile_mail_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/profile_mail_textView"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_below="@+id/profile_phone_textView"
        android:background="@drawable/spinner_border"
        android:layout_alignLeft="@+id/profile_phone_editText"
        android:layout_alignStart="@+id/profile_phone_editText"
        android:layout_marginRight="5sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_mail_editText"
        android:layout_centerHorizontal="true"
        android:id="@+id/change_pass_header_linearLayout"
        android:background="@drawable/spinner_border1"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/passw_change"
            android:id="@+id/change_pass_header_textView" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passw_actual"
        android:id="@+id/change_pass_textView"
        android:layout_below="@+id/change_pass_header_linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/change_passw_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/change_pass_textView"
        android:layout_below="@+id/change_pass_header_linearLayout"
        android:background="@drawable/spinner_border"
        android:layout_marginRight="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passw_new"
        android:id="@+id/change_pass_new_textView"
        android:layout_below="@+id/change_pass_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/change_pass_new_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/change_pass_new_textView"
        android:layout_below="@+id/change_pass_textView"
        android:background="@drawable/spinner_border"
        android:layout_marginRight="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passw_again"
        android:id="@+id/pass_again_textView"
        android:layout_below="@+id/change_pass_new_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passw_again_editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/pass_again_textView"
        android:background="@drawable/spinner_border"
        android:layout_below="@+id/change_pass_new_textView"
        android:layout_marginRight="5sp" />
</RelativeLayout>