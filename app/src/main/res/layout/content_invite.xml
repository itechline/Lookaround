<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ededed">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/invite_smalltext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginBottom="20sp"
                    android:text="@string/invite_page_top_hint_text"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/email1"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:background="#ffffff"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5sp"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/email2"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:background="#ffffff"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5sp"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/email3"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:background="#ffffff"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5sp"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/email4"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:background="#ffffff"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5sp"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/email5"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:background="#ffffff"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5sp"
                    android:textSize="13sp" />


                <EditText
                    android:id="@+id/email6"
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_margin="10sp"
                    android:background="#ffffff"
                    android:elevation="2dp"
                    android:ems="10"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="5sp"
                    android:textSize="13sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/invite_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/intive_send_button"
            android:layout_width="130sp"
            android:layout_height="40sp"
            android:layout_margin="5sp"
            android:background="@drawable/gomb_kicsi"
            android:gravity="center"
            android:paddingBottom="3sp"
            android:paddingLeft="10sp"
            android:paddingRight="10sp"
            android:paddingTop="3sp"
            android:text="KÃ¼ld"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>