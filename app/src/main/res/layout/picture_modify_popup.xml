<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="5sp">

    <RelativeLayout
        android:id="@+id/pic_modify_popoup_layout"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/background_shadow_popup"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:elevation="24dp">

        <Button
            android:layout_width="125sp"
            android:layout_height="35sp"
            android:text="@string/button_picswap"
            android:id="@+id/swap_pic_button"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:drawablePadding="5sp"
            android:textColor="#0066cc"
            android:padding="10sp"
            android:background="@drawable/colorbutton_delete1"
            android:textSize="12sp"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp" />

        <Button
            android:layout_width="125sp"
            android:layout_height="35sp"
            android:text="@string/button_picdelete"
            android:id="@+id/delete_pic_button"
            android:layout_below="@+id/swap_pic_button"
            android:layout_centerHorizontal="true"
            android:layout_margin="5sp"
            android:drawablePadding="5sp"
            android:textColor="#ff0000"
            android:padding="10sp"
            android:background="@drawable/colorbutton_delete1"
            android:textSize="12sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:text="@string/button_cancel"
            android:id="@+id/cancel_pic_button"
            android:layout_below="@+id/delete_pic_button"
            android:layout_centerHorizontal="true"
            android:background="@drawable/colorbutton"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:textSize="12sp"/>

        <ImageView
            android:src="@drawable/admonitor_pirosiksz"
            android:layout_width="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_pic_pirosiksz"
            android:layout_toLeftOf="@+id/delete_pic_button"
            android:layout_toStartOf="@+id/delete_pic_button"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_alignTop="@+id/delete_pic_button"
            android:layout_alignBottom="@+id/delete_pic_button" />

        <ImageView
            android:src="@drawable/admonitor_ceruza"
            android:layout_width="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/swap_pic_ceruza"
            android:layout_alignTop="@+id/swap_pic_button"
            android:layout_toLeftOf="@+id/swap_pic_button"
            android:layout_toStartOf="@+id/swap_pic_button"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_alignBottom="@+id/swap_pic_button" />
    </RelativeLayout>
</RelativeLayout>