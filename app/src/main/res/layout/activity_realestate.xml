<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_realestate_drawer" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/navbar_search_relative">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Keressen 770 millárd hírdetés között"
                    android:id="@+id/search_title_text"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/type_search"
                    android:id="@+id/type_realestate_textview"
                    android:layout_gravity="left"
                    android:layout_below="@+id/search_title_text"
                    android:textStyle="bold"
                    android:layout_margin="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/localisation_search"
                    android:id="@+id/text_localisation_search"
                    android:layout_below="@+id/type_realestate_textview"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/keyword_search"
                    android:id="@+id/text_keyword_search"
                    android:layout_below="@+id/text_localisation_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/idontwant_search"
                    android:id="@+id/text_idontwant_search"
                    android:layout_below="@+id/text_keyword_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/floors_search"
                    android:id="@+id/text_floors_search"
                    android:layout_below="@+id/text_idontwant_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/rooms_count_search"
                    android:id="@+id/text_rooms_count_search"
                    android:layout_below="@+id/text_floors_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/elevator_search"
                    android:id="@+id/text_elevator_search"
                    android:layout_below="@+id/text_rooms_count_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/balcony_search"
                    android:id="@+id/text_balcony_search"
                    android:layout_below="@+id/text_elevator_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/inner_height_search"
                    android:id="@+id/text_inner_height_search"
                    android:layout_below="@+id/text_balcony_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/bathroom_wc_realestate"
                    android:id="@+id/text_bathroom_wc_realestate"
                    android:layout_below="@+id/text_inner_height_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/air_condition_search"
                    android:id="@+id/text_air_condition_search"
                    android:layout_below="@+id/text_bathroom_wc_realestate"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/garden_realtion_search"
                    android:id="@+id/text_garden_realtion_search"
                    android:layout_below="@+id/text_air_condition_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/condition_search"
                    android:id="@+id/text_condition_search"
                    android:layout_below="@+id/text_garden_realtion_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/attic_search"
                    android:id="@+id/text_attic_search"
                    android:layout_below="@+id/text_condition_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold"
                    android:layout_margin="15sp"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_type_spinner"
                    android:layout_below="@+id/search_title_text"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_rooms_count_search"
                    android:layout_above="@+id/text_localisation_search"
                    android:layout_alignLeft="@+id/realestate_localisation_spinner"
                    android:layout_alignStart="@+id/realestate_localisation_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_localisation_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_rooms_count_search"
                    android:layout_below="@+id/type_realestate_textview"
                    android:layout_above="@+id/text_keyword_search"
                    android:layout_alignLeft="@+id/keyword_editText"
                    android:layout_alignStart="@+id/keyword_editText" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/keyword_editText"
                    android:hint="@string/keyword_hint"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_inner_height_search"
                    android:layout_above="@+id/text_idontwant_search"
                    android:layout_below="@+id/text_localisation_search"
                    android:layout_alignLeft="@+id/idontwant_editText"
                    android:layout_alignStart="@+id/idontwant_editText" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idontwant_editText"
                    android:hint="@string/idontwant_hint"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/text_idontwant_search"
                    android:layout_toEndOf="@+id/text_idontwant_search"
                    android:layout_above="@+id/text_floors_search"
                    android:layout_below="@+id/text_keyword_search" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_floors_min_spinner"
                    android:layout_above="@+id/text_rooms_count_search"
                    android:layout_toLeftOf="@+id/realestate_floors_max_spinner"
                    android:layout_alignLeft="@+id/keyword_editText"
                    android:layout_alignStart="@+id/keyword_editText"
                    android:layout_below="@+id/text_idontwant_search" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_floors_max_spinner"
                    android:layout_alignRight="@+id/keyword_editText"
                    android:layout_alignEnd="@+id/keyword_editText"
                    android:layout_toEndOf="@+id/search_confirm_button"
                    android:layout_above="@+id/text_rooms_count_search"
                    android:layout_toRightOf="@+id/search_confirm_button"
                    android:layout_below="@+id/text_idontwant_search" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_roomcount_min_spinner"
                    android:layout_above="@+id/text_elevator_search"
                    android:layout_below="@+id/realestate_floors_min_spinner"
                    android:layout_toLeftOf="@+id/realestate_floors_max_spinner"
                    android:layout_alignLeft="@+id/realestate_floors_min_spinner"
                    android:layout_alignStart="@+id/realestate_floors_min_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_roomcount_max_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/realestate_floors_min_spinner"
                    android:layout_above="@+id/text_elevator_search"
                    android:layout_below="@+id/realestate_floors_max_spinner"
                    android:layout_toRightOf="@+id/realestate_floors_min_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_elevator_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignLeft="@+id/realestate_type_spinner"
                    android:layout_alignStart="@+id/realestate_type_spinner"
                    android:layout_above="@+id/text_balcony_search"
                    android:layout_below="@+id/text_rooms_count_search" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_balcony_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/realestate_elevator_spinner"
                    android:layout_above="@+id/text_inner_height_search"
                    android:layout_alignLeft="@+id/keyword_editText"
                    android:layout_alignStart="@+id/keyword_editText" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/realestate_innerheight_spinner"
                    android:layout_below="@+id/realestate_balcony_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_inner_height_search"
                    android:layout_above="@+id/text_bathroom_wc_realestate"
                    android:layout_alignLeft="@+id/realestate_balcony_spinner"
                    android:layout_alignStart="@+id/realestate_balcony_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bathroom_wc_realestate_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_bathroom_wc_realestate"
                    android:layout_above="@+id/text_air_condition_search"
                    android:layout_below="@+id/text_inner_height_search"
                    android:layout_alignLeft="@+id/realestate_innerheight_spinner"
                    android:layout_alignStart="@+id/realestate_innerheight_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/aircondition_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_above="@+id/text_garden_realtion_search"
                    android:layout_below="@+id/text_bathroom_wc_realestate"
                    android:layout_toEndOf="@+id/text_air_condition_search"
                    android:layout_alignLeft="@+id/bathroom_wc_realestate_spinner"
                    android:layout_alignStart="@+id/bathroom_wc_realestate_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/gardenrelation_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_garden_realtion_search"
                    android:layout_above="@+id/text_condition_search"
                    android:layout_below="@+id/aircondition_spinner"
                    android:layout_alignLeft="@+id/aircondition_spinner"
                    android:layout_alignStart="@+id/aircondition_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/condition_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_condition_search"
                    android:layout_above="@+id/text_attic_search"
                    android:layout_below="@+id/gardenrelation_spinner"
                    android:layout_alignLeft="@+id/gardenrelation_spinner"
                    android:layout_alignStart="@+id/gardenrelation_spinner" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/attic_spinner"
                    android:layout_below="@+id/condition_spinner"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/text_attic_search"
                    android:layout_alignLeft="@+id/condition_spinner"
                    android:layout_alignStart="@+id/condition_spinner"
                    android:layout_above="@+id/search_confirm_button" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/button_go"
                    android:id="@+id/search_confirm_button"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/colorbutton"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_marginBottom="15sp"
                    android:layout_below="@+id/text_attic_search" />


            </RelativeLayout>
        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
