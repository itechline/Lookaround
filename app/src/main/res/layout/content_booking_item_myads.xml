<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner_border1"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-01-01 00:00:00"
            android:id="@+id/booking_hours_text"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="14sp"
            android:layout_marginTop="80sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="2sp"
            android:textColor="#0066cc"/>


        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/agree"
            android:id="@+id/booking_date_agree"
            android:layout_marginLeft="100sp"
            android:layout_marginTop="45sp"
            android:textColor="#0066cc"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/disagree"
            android:id="@+id/booking_date_disaggree"
            android:textSize="18sp"
            android:layout_marginTop="45sp"
            android:textColor="#ff0000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redneck Johnie"
            android:id="@+id/who_booked_it_text"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="0sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toStartOf="@+id/bookingPhonwIMG"
            android:ellipsize="end"
            android:maxLines="1"/>

        <ImageView
            android:src="@drawable/ic_action_name2"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:id="@+id/bookingPhonwIMG"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds = "true"/>
    </RelativeLayout>


</RelativeLayout>