<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Keressen 770 millárd hírdetés között"
        android:id="@+id/search_title_text"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10sp"
        android:background="@drawable/spinner_border1"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_marginTop="10sp"
        />

    <TextView
        android:id="@+id/type_realestate_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/type_search"
        android:layout_below="@+id/search_title_text"
        android:layout_alignParentLeft="true"
        android:textSize="10pt"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp"/>

    <Spinner
        android:id="@+id/realestate_type_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/type_realestate_textview"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:background="@drawable/spinner_border" />

    <TextView
        android:id="@+id/text_localisation_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/localisation_search"
        android:layout_below="@+id/realestate_type_spinner"
        android:layout_alignParentLeft="true"
        android:textSize="10pt"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp"/>

    <Spinner
        android:id="@+id/realestate_localisation_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_localisation_search"
        android:layout_centerHorizontal="true"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:background="@drawable/spinner_border"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"/>



    <TextView
        android:id="@+id/text_floors_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/floors_search"
        android:layout_below="@+id/realestate_localisation_spinner"
        android:layout_alignParentLeft="true"
        android:textSize="10pt"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp"/>

    <LinearLayout
        android:id="@+id/floors_realestate_linear_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_floors_search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/realestate_floors_min_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="min"
             />

        <Spinner
            android:id="@+id/realestate_floors_min_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/realestate_floors_max_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="max"
             />

        <Spinner
            android:id="@+id/realestate_floors_min_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_rooms_count_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/rooms_count_search"
        android:layout_below="@+id/floors_realestate_linear_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10pt"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_marginLeft="10sp"/>




</RelativeLayout>